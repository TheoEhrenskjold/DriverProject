@model IEnumerable<DriverProject.Models.Employee>



<h2 style="color: lavender; margin-top:5%">Employees</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>
                    @* <a asp-action="Details" asp-route-id="@employee.Id">Details</a>
                    <a asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a> *@

                    <a asp-controller="Employee" asp-action="Details" asp-route-Id="@employee.Id" class="btn btn-primary">View Details</a> |
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning">Edit</a> |
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Employee</a>
