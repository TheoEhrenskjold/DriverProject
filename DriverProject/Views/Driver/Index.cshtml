@model IEnumerable<DriverProject.Models.Driver>

<h2>Drivers</h2>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchName" placeholder="Search by Name" class="form-control mr-2" value="@ViewData["SearchName"]" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>DriverName</th>
            <th>CarReg</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var driver in Model)
        {
            <tr>
                    <td>@driver.DriverName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@driver.DriverID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@driver.DriverID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@driver.DriverID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Driver</a>
