@model DriverProject.Models.Event

<h2>Delete Event</h2>

<p>Are you sure you want to delete this event?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Note Date</dt>
        <dd class="col-sm-10">@Model.NoteDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.NoteDescription</dd>

        <dt class="col-sm-2">Belopp In</dt>
        <dd class="col-sm-10">@Model.BeloppIn</dd>

        <dt class="col-sm-2">Belopp Ut</dt>
        <dd class="col-sm-10">@Model.BeloppUt</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EventID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-driverId="@Model.DriverID" class="btn btn-secondary">Cancel</a>
</form>
